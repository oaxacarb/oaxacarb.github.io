- permalink_url = "http://oaxacarb.org#{current_page.url}"
.row
  .small-12.medium-4.large-4.small-centered.columns.blog-social
    %ul.inline-list
      %li
        %a.socialite.twitter-share{"data-count" => "vertical", "data-text" => current_page.title, "data-url" => permalink_url, :href => "http://twitter.com/share", :rel => "nofollow", :target => "_blank"}
          %span.vhidden Share on Twitter
      %li
        %a.socialite.googleplus-one{"data-href" => permalink_url, "data-size" => "tall", :href => "https://plus.google.com/share?url=#{permalink_url}", :rel => "nofollow", :target => "_blank"}
          %span.vhidden Share on Google+
      %li
        %a.socialite.facebook-like{"data-href" => permalink_url, "data-layout" => "box_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "60", :href => "http://www.facebook.com/sharer.php?u=#{permalink_url}&t=#{URI.encode(current_page.title)}", :rel => "nofollow", :target => "_blank"}
          %span.vhidden Share on Facebook
